<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="clickHandler" type="android.view.View.OnClickListener" />
    </data>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingRight="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/header_left_image"
            android:layout_width="wrap_content"
            android:paddingTop="@dimen/dp_12"
            android:onClick="@{clickHandler::onClick}"
            android:paddingBottom="@dimen/dp_12"
            android:paddingLeft="@dimen/dp_0"
            android:paddingRight="@dimen/dp_16"
            android:src="@mipmap/quan_back"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/header_right_text"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_60"
            android:paddingRight="@dimen/dp_30"
            android:id="@+id/header_title"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black"
            android:gravity="center"
            android:text=""
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/header_right_text"
            android:onClick="@{clickHandler::onClick}"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_14"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:paddingTop="@dimen/dp_8"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/dp_8"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>

</RelativeLayout>

</layout>