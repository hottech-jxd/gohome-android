            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/coupon_item_title"
            app:layout_constraintLeft_toLeftOf="@id/coupon_item_title"/>

    <TextView
            android:visibility="visible"
            android:text="还剩108件"
            android:textColor="#acacac"
            android:textSize="@dimen/sp_12"
            android:id="@+id/coupon_item_count"
            android:gravity="right"
            android:singleLine="true"
