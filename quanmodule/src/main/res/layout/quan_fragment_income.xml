<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="clickHandler" type="android.view.View.OnClickListener" />
    </data>

    <RelativeLayout
            android:background="#f2f2f2"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
                 android:fitsSystemWindows="true"
                 android:clipToPadding="true"
             tools:context=".fragment.IncomeFragment">

        <include layout="@layout/layout_common_header"
                 app:clickHandler="@{clickHandler}"
                 android:layout_width="match_parent"
                 android:id="@+id/income_lay_header"
                 android:layout_height="wrap_content" />


        <android.support.v4.widget.NestedScrollView
                android:layout_below="@id/income_lay_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

          <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content">

        <LinearLayout

                android:paddingTop="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_16"
                android:paddingLeft="@dimen/dp_16"
                android:paddingRight="@dimen/dp_16"
                android:id="@+id/income_lay_balance"
                android:orientation="vertical"
                android:background="#FBBD00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:textColor="@color/white"
                      android:textSize="@dimen/sp_12"
                      android:text="累计收益 (元)"
                      android:layout_height="wrap_content"/>
            <TextView
                    android:layout_marginTop="@dimen/dp_2"
                    android:textSize="@dimen/sp_20"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="0.00"
                    android:id="@+id/income_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>


        <TableLayout android:layout_width="match_parent"
                     android:id="@+id/income_summary"
                     android:layout_marginTop="@dimen/dp_10"
                     android:layout_marginBottom="@dimen/dp_15"
                     android:layout_below="@id/income_lay_balance"
                     android:layout_height="wrap_content">
            <TableRow>

                    <LinearLayout android:orientation="vertical"
                    android:layout_width="0dp"
                                  android:layout_marginRight="@dimen/dp_0_5"
                                  android:background="@color/white"
                                  android:padding="@dimen/dp_15"
                                  android:layout_weight="1"
                    android:layout_height="wrap_content">
                        <TextView android:layout_width="wrap_content"
                                  android:layout_gravity="center_horizontal"
                                  android:text="今日预估(元)"
                                  android:textColor="@color/black"
                                  android:textSize="@dimen/sp_14"
                                  android:layout_height="wrap_content"/>
                        <TextView android:layout_width="wrap_content"
                                  android:text="0.00"
                                  android:textSize="@dimen/sp_16"
                                  android:textColor="@color/black"
                                  android:layout_gravity="center_horizontal"
                                  android:layout_height="wrap_content"/>
                        <TextView android:layout_width="wrap_content"
                                  android:text="预估5单"
                                  android:paddingTop="@dimen/dp_4"
                                  android:textSize="@dimen/sp_10"
                                  android:layout_gravity="center_horizontal"
                                  android:layout_height="wrap_content"/>
                    </LinearLayout>

                <LinearLayout android:orientation="vertical"
                              android:background="@color/white"
                              android:layout_width="0dp"
                              android:layout_marginLeft="@dimen/dp_0_1"
                              android:padding="@dimen/dp_15"
                              android:layout_weight="1"
                              android:layout_height="wrap_content">
                    <TextView android:layout_width="wrap_content"
                              android:text="昨日预估(元)"
                              android:textColor="@color/black"
                              android:textSize="@dimen/sp_14"
                              android:layout_gravity="center_horizontal"
                              android:layout_height="wrap_content"/>
                    <TextView android:layout_width="wrap_content"
                              android:text="0.00"
                              android:textColor="@color/black"
                              android:textSize="@dimen/sp_16"
                              android:layout_gravity="center_horizontal"
                              android:layout_height="wrap_content"/>
                    <TextView android:layout_width="wrap_content"
                              android:text="预估5单"
                              android:paddingTop="@dimen/dp_4"
                              android:textSize="@dimen/sp_10"
                              android:layout_gravity="center_horizontal"
                              android:layout_height="wrap_content"/>
                </LinearLayout>

            </TableRow>
            <TableRow>

                <LinearLayout android:orientation="vertical"
                              android:background="@color/white"
                              android:layout_marginTop="@dimen/dp_1"
                              android:layout_width="0dp"
                              android:layout_marginLeft="@dimen/dp_0_1"
                              android:padding="@dimen/dp_15"
                              android:layout_weight="1"
                              android:layout_height="wrap_content">
                    <TextView android:layout_width="wrap_content"
                              android:text="本周预估(元)"
                              android:textColor="@color/black"
                              android:textSize="@dimen/sp_14"
                              android:layout_gravity="center_horizontal"
                              android:layout_height="wrap_content"/>
                    <TextView android:layout_width="wrap_content"
                              android:text="0.00"
                              android:textColor="@color/black"
                              android:textSize="@dimen/sp_16"
                              android:layout_gravity="center_horizontal"
                              android:layout_height="wrap_content"/>
                    <TextView android:layout_width="wrap_content"
                              android:text="预估5单"
                              android:paddingTop="@dimen/dp_4"
                              android:textSize="@dimen/sp_10"
                              android:layout_gravity="center_horizontal"
                              android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout android:orientation="vertical"
                              android:layout_marginTop="@dimen/dp_1"
                              android:background="@color/white"
                              android:layout_width="0dp"
                              android:layout_marginLeft="@dimen/dp_0_1"
                              android:padding="@dimen/dp_15"
                              android:layout_weight="1"
                              android:layout_height="wrap_content">
                    <TextView android:layout_width="wrap_content"
                              android:text="上周预估(元)"
                              android:textColor="@color/black"
                              android:textSize="@dimen/sp_14"
                              android:layout_gravity="center_horizontal"
                              android:layout_height="wrap_content"/>
                    <TextView android:layout_width="wrap_content"
                              android:text="0.00"
                              android:textColor="@color/black"
                              android:textSize="@dimen/sp_16"
                              android:layout_gravity="center_horizontal"
                              android:layout_height="wrap_content"/>
                    <TextView android:layout_width="wrap_content"
                              android:text="预估5单"
                              android:paddingTop="@dimen/dp_4"
                              android:textSize="@dimen/sp_10"
                              android:layout_gravity="center_horizontal"
                              android:layout_height="wrap_content"/>
                </LinearLayout>

            </TableRow>

            <TableRow>

                <LinearLayout android:orientation="vertical"
                              android:background="@color/white"
                              android:layout_width="0dp"
                              android:layout_marginTop="@dimen/dp_1"
                              android:layout_marginLeft="@dimen/dp_0_1"
                              android:padding="@dimen/dp_15"
                              android:layout_weight="1"
                              android:layout_height="wrap_content">
                    <TextView android:layout_width="wrap_content"
                              android:text="本月预估(元)"
                              android:textColor="@color/black"
                              android:textSize="@dimen/sp_14"
                              android:layout_gravity="center_horizontal"
                              android:layout_height="wrap_content"/>
                    <TextView android:layout_width="wrap_content"
                              android:text="0.00"
                              android:textColor="@color/black"
                              android:textSize="@dimen/sp_16"
                              android:layout_gravity="center_horizontal"
                              android:layout_height="wrap_content"/>
                    <TextView android:layout_width="wrap_content"
                              android:text="预估5单"
                              android:paddingTop="@dimen/dp_4"
                              android:textSize="@dimen/sp_10"
                              android:layout_gravity="center_horizontal"
                              android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout android:orientation="vertical"
                              android:layout_marginTop="@dimen/dp_1"
                              android:background="@color/white"
                              android:layout_width="0dp"
                              android:layout_marginLeft="@dimen/dp_0_1"
                              android:padding="@dimen/dp_15"
                              android:layout_weight="1"
                              android:layout_height="wrap_content">
                    <TextView android:layout_width="wrap_content"
                              android:text="上月预估(元)"
                              android:textColor="@color/black"
                              android:textSize="@dimen/sp_14"
                              android:layout_gravity="center_horizontal"
                              android:layout_height="wrap_content"/>
                    <TextView android:layout_width="wrap_content"
                              android:text="0.00"
                              android:textColor="@color/black"
                              android:textSize="@dimen/sp_16"
                              android:layout_gravity="center_horizontal"
                              android:layout_height="wrap_content"/>
                    <TextView android:layout_width="wrap_content"
                              android:text="预估5单"
                              android:paddingTop="@dimen/dp_4"
                              android:textSize="@dimen/sp_10"
                              android:layout_gravity="center_horizontal"
                              android:layout_height="wrap_content"/>
                </LinearLayout>

            </TableRow>
        </TableLayout>

        <com.github.mikephil.charting.charts.LineChart
            android:layout_width="match_parent"
            android:layout_below="@id/income_summary"
            android:id="@+id/income_lineChart"
            android:background="@color/white"
            android:layout_height="@dimen/dp_300"/>

        </RelativeLayout>


        </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
</layout>