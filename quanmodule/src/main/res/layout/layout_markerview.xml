<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:paddingTop="@dimen/dp_6"
        android:paddingBottom="@dimen/dp_6"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:background="@drawable/shape_markerview_bg"
        android:layout_height="wrap_content">

    <TextView android:layout_width="wrap_content"
              android:id="@+id/markerview_date1"
              android:text=""
              android:textSize="@dimen/sp_12"
              android:textColor="@color/black"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:id="@+id/markerview_content1"
              android:layout_toRightOf="@id/markerview_date1"
              android:textSize="@dimen/sp_12"
              android:text=""
              android:textColor="@color/black"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:id="@+id/markerview_date2"
              android:layout_below="@id/markerview_date1"
              android:layout_alignLeft="@id/markerview_date1"
              android:text=""
              android:textSize="@dimen/sp_12"
              android:textColor="@color/black"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:id="@+id/markerview_content2"
              android:textSize="@dimen/sp_12"
              android:layout_toRightOf="@id/markerview_date2"
              android:layout_alignBottom="@id/markerview_date2"
              android:text=""
              android:textColor="@color/black"
              android:layout_height="wrap_content"/>
</RelativeLayout>