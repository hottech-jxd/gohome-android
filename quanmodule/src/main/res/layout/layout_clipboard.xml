<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/dp_50"
        android:paddingRight="@dimen/dp_50"
        android:clickable="true"
        android:focusable="true"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#44000000"
        android:layout_height="match_parent">


    <RelativeLayout
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical"
            android:layout_width="0dp" android:layout_height="wrap_content">

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:paddingLeft="@dimen/dp_10"
                   android:paddingRight="@dimen/dp_10"
                   android:layout_alignRight="@id/clipboard_p1"
                   android:id="@+id/clipboard_close"
            android:src="@mipmap/close"/>

        <ImageView android:layout_width="wrap_content"
                   android:layout_below="@id/clipboard_close"
                   android:src="@mipmap/p1"
                   android:id="@+id/clipboard_p1"
                   android:layout_centerHorizontal="true"
                   android:layout_height="wrap_content"/>

        <RelativeLayout android:layout_below="@id/clipboard_p1"
                        android:layout_alignRight="@id/clipboard_p1"
                        android:layout_alignLeft="@id/clipboard_p1"
                android:background="@drawable/shape_clipboard_bg"
                android:layout_width="wrap_content" android:layout_height="wrap_content">

            <TextView android:layout_width="match_parent"
                  android:layout_gravity="center_horizontal"
                  android:id="@+id/clipboard_text"
                  android:textColor="@color/black"
                  android:textSize="@dimen/sp_15"
                  android:background="@color/white"
                  android:padding="@dimen/dp_15"
                  android:lineSpacingExtra="@dimen/dp_4"
                      android:maxLines="3"
                      android:ellipsize="end"
                  android:text="中国李宁篮球鞋男鞋秋冬问鼎非攻韦德攻韦德攻韦德攻韦德"
                  android:layout_height="wrap_content"/>

            <ImageView android:layout_width="wrap_content"
                   android:layout_below="@id/clipboard_text"
                   android:src="@mipmap/s1"
                   android:layout_alignRight="@id/clipboard_text"
                   android:layout_alignLeft="@id/clipboard_text"
                  android:id="@+id/clipboard_s1"
                   android:background="@color/white"
                   android:layout_height="wrap_content"/>

            <TextView android:layout_width="wrap_content"
                  android:layout_below="@id/clipboard_s1"
                  android:text="拼多多"
                      android:id="@+id/clipboard_pinduoduo"
                  android:layout_marginTop="@dimen/dp_15"
                      android:layout_marginLeft="@dimen/dp_15"
                      android:layout_marginRight="@dimen/dp_15"
                      android:layout_marginBottom="@dimen/dp_20"
                  android:layout_alignRight="@id/clipboard_text"
                  android:layout_alignLeft="@id/clipboard_text"
                  android:textSize="@dimen/sp_13"
                  android:textColor="@color/white"
                  android:padding="@dimen/dp_6"
                  android:gravity="center"
                  android:background="@drawable/shape_orange_bg"
                  android:layout_height="wrap_content"/>
        </RelativeLayout>

    </RelativeLayout>



</android.support.constraint.ConstraintLayout>